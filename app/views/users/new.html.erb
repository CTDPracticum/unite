=begin%>
 First page rooted to users#new with create user and login forms 
<%
=end%>

<div class="container mx-auto">
    <div class="row justify-content-around mt-5">
        <div id="group" class="col-4 text-center">
          <h1 id='home'>Sign Up</h1>
          <%= form_for @user do |f|%>
            <%= f.label :name%><br>
            <%= f.text_field :name%><br>
            <%= f.label :email%><br>
            <%= f.email_field :email%><br> 
            <%= f.label :password%><br>
            <%= f.password_field :password%> <br>
            <div class="btn-space">
            <%= f.submit "Sign up",  class:"btn-primar" %> 
            </div>
          <% end %>
        </div>
    </div>
</div>
 
