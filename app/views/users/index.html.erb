<p id="notice"><%= notice %></p>

<div class="container mb-4">
<h1 class="text-center font-weight-bold my-4">Create New User Account</h1>

  <table class="table table-striped mx-auto align-center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <%# NOTE:using link_to to process delete was not working i had to use button_to and
    when using button_to for edit or show it would not work unless i add :method => :get %>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class:"btn-show" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class:"btn-edit" %></td>
          <td><%= button_to 'Delete', user, class:"btn-delete", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row justify-content-center">
    <%= link_to 'New User', new_user_path, class:"btn-create" %>
  </div>
</div>