<p id="notice"><%= notice %></p>

<div class="container m-4">
  <h1 class="text-center font-weight-bold my-4">Groups</h1>

    <table class="table table-striped mx-auto align-center">
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.title %></td>
            <td><%= group.location %></td>
            <td><%= link_to 'Show', group, class: "btn-show" %></td>
            <td><%= link_to 'Edit', edit_group_path(group), class: "btn-edit" %></td>
            <td><%= button_to 'Delete', group, class:"btn-delete", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

   
      <%= link_to 'New Group', new_group_path, class: "btn-create" %>
    
</div>